<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_temperature_unit_label"
        android:dialogTitle="@string/pref_temperature_unit_label"
        android:key="@string/pref_temperature_unit_key"
        android:entries="@array/pref_temperature_unit_entries"
        android:entryValues="@array/pref_temperature_unit_values"
        android:defaultValue="@string/pref_temperature_unit_value_default" />

</PreferenceScreen>
